{
    "app-id": "me.leucoso.Grock",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "grock",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.GeoClue2",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
    	{
            "name" : "libchamplain",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://codeberg.org/dburgess/libchamplain-wms.git",
                    "tag" : "v1.0.0",
                    "commit" : "ec6cc2f9d85a2295df7684aa1ed28d077e36cdeb"
                }
            ]
        },
        {
            "name" : "geocode-glib",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "-Denable-gtk-doc=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/geocode-glib.git",
                    "tag" : "3.26.2",
                    "commit" : "34f420cbe1ff3f45fde9179ba07e0259b9ce505b"
                }
            ]
        },
        {
            "name" : "proj",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/OSGeo/proj",
                    "tag" : "7.1.0",
                    "commit" : "76aed5878d64212f0ec5bbebad84aaeba4f7814b"
                }
            ]
        },
        {
            "name": "grock",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://codeberg.org/dburgess/Grock.git",
                    "tag": "v1.0.0",
                    "commit": "8e28f2d7768a4f29ee6e524083faf6ff093b5ead	"
                }
            ]
        }
    ]
}
